<h2>Change <%= @member.pretty_name %>'s Details</h2>

<form method="post" action="/members/<%= @member.id %>">
  <label for="first-name-field">First Name:</label>
  <input
  type="text"
  name="first_name"
  id="first-name-field"
  value="<%= @member.first_name %>"
  required
  />

<label for="second-name-field">Second Name:</label>
<input
type="text"
name="second_name"
id="second-name-field"
value="<%= @member.second_name %>"
required
/>

<label for="age-field">Age</label>
<input
type="number"
name="age"
id="age-field"
value="<%= @member.age %>"
required
/>

<label>
Select Status:
  <select name="status">

    <option value="Standard">Standard</option>
    <option value="Premium">Premium</option>


  </select>
</label>

<input type="submit" value="Edit Member Details">
</form>

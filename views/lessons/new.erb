<h2>Create a lesson!</h2>

<form action="/lessons" method="post">
  <label for="title-field">Title:</label>
  <input
  type="text"
  name="title"
  id="title-field"
  required
  />

  <label for="day/time-field">Day/Time:</label>
  <input
  type="text"
  name="day_time"
  id="day/time-field"
  required
  />

  <label for="capacity-field">Capacity:</label>
  <input
  type="number"
  name="capacity"
  id="capacity-field"
  required
  />



  <input type="submit" value="Create new lesson">
</form>

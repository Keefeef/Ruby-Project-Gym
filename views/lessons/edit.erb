<h1>Change <%= @lesson.title %> Details</h1>

<form method="post" action="/lessons/<%= @lesson.id %>">
  <label for="title-field">Title:</label>
  <input
  type="text"
  name="title"
  id="title-field"
  value="<%= @lesson.title %>"
  required
  />

<label for="day/time-field">Day/Time:</label>
<input
type="text"
name="day_time"
id="day/time-field"
value="<%= @lesson.day_time %>"
required
/>

<label for="capacity-field">Capacity:</label>
<input
type="text"
name="capacity"
id="capacity-field"
value="<%= @lesson.capacity %>"
required
/>



<input type="submit" value="Edit lesson">
</form>
